<div class="page-header">
  <h2>Edit <small>Team</small></h2>
  
</div>
<div "form-group">
  <% if @team.errors.any? %>
    <div class="alert alert-danger col-md-10" role="alert">
      <span class="sr-only">Error:</span>
        <% @team.errors.full_messages.each do |message| %>
        
          <p>* <%= message %></p>
        
        <%end%>
    </div>    
  <% end %>
</div>
<div class="body_view">

  <%= form_for @team do |form| %>
    <div "form-group">
      <%= form.label :name, class: 'control-label col-md-10 ' %>
      <div class = "col-md-4">
        <p><%= form.text_field :name , class: 'form-control'%> </p>
        <%= form.submit class: 'btn btn-default' %>
      </div>
    </div>

  <% end %>
</div>