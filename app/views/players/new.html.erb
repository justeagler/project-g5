
<div class="page-header">
  <h2>Create <small>Player</small></h2>
</div>

	
<div class="form-horizontal">
	<div class="form-group">
		<div class="col-sm-10">
			<% if @player.errors.any? %>
				<div class="alert alert-danger col-md-10" role="alert">
	  				<span class="sr-only">Error:</span>
	  					<% @player.errors.full_messages.each do |message| %>
							<p>* <%= message%>	</p>
						<%end%>
				</div>		
			<% end %>
		</div>	
	</div>	


	<%= form_for @player do |form|  %>
		<div class="form-group">
			<%= form.label :name, class: 'control-label col-sm-2' %>
			<div class="col-sm-10">
				<%= form.text_field :name, class: 'form-control' %>
			</div>
		</div>
		<div class="form-group">
			<%= form.label :position, class: 'control-label col-sm-2'%>
			<div class="col-sm-10">
				<%= form.text_field :position, class: 'form-control'%>
			</div>
		</div>	
		<div class="form-group">
			<%= form.label :number, class: 'control-label col-sm-2' %>
			<div class="col-sm-10">
				<%= form.text_field :number, class: 'form-control' %>
			</div>
		</div>
		<div class="form-group">
			<%= form.label :birthday, class: 'control-label col-sm-2' %>
			<div class="col-sm-10">
				<%= form.text_field :birthday, class: 'form-control'%>
			</div>	
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= form.submit class: 'btn btn-default' %>
			</div>
		</div>		

	<% end %>

</div>

 <script>
 	$('#player_birthday').datepicker(
 		{
 			changeMonth: true,
      		changeYear: true

 		});

  </script>